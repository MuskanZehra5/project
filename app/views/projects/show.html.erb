<p id="notice"><%= notice %></p>

<div class="card">
<div class="card-header">
   <strong> <%= @project.name %></strong>
  </div>
<div class="card-body">
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @project.user.email %>
</p>

<%= link_to 'Edit', edit_project_path(@project),class:"btn btn-primary" %> |
<%= link_to 'Back', projects_path,class:"btn btn-primary" %>
<br/>
</div>
</div>

<br/>
<hr>
<br/>
<h1>Listing tasks</h1>

<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @project.tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.project.name %></td>
    <td><%= link_to 'Show', [task.project, task],class:"btn btn-outline-info" %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task),class:"btn btn-outline-success" %></td>
    <td><%= link_to 'Destroy', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Task', new_project_task_path(@project.id),class:"btn btn-primary" %>

