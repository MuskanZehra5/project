<p id="notice"><%= notice %></p>
<div class="card">
<div class="card-header">
<h1>Projects</h1>
    
  </div>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.user_id %></td>
        <td><%= link_to 'Show', project,class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_project_path(project),class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
<br/>
<%= link_to 'New Project', new_project_path,class:"btn btn-primary" %>